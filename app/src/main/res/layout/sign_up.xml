<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/input_signup_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="input signup username" />

    <EditText
        android:id="@+id/input_signup_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="input signup password" />

    <EditText
        android:id="@+id/input_signup_password_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="input signup password again" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up" />

        <Button
            android:id="@+id/cancel_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"/>
    </LinearLayout>


</LinearLayout>