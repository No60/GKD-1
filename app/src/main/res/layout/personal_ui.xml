<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".view.RunningView.RunningActivity">

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="350dp"
            android:layout_y="0dp"
            app:srcCompat="@android:drawable/ic_menu_manage" />

        <ImageButton
            android:id="@+id/avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="30dp"
            android:layout_y="75dp"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <ImageButton
            android:id="@+id/create_post"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_x="70dp"
            android:layout_y="560dp"
            app:srcCompat="@android:drawable/ic_menu_send" />

        <ImageButton
            android:id="@+id/running"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_x="170dp"
            android:layout_y="560dp"
            app:srcCompat="@android:drawable/ic_menu_myplaces" />

        <ImageButton
            android:id="@+id/personnal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_x="270dp"
            android:layout_y="560dp"
            app:srcCompat="@android:drawable/ic_menu_my_calendar" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_x="0dp"
            android:layout_y="0dp"
            android:text="我"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/neckname"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_x="150dp"
            android:layout_y="90dp"
            android:text="昵称" />

        <TextView
            android:id="@+id/target"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_x="150dp"
            android:layout_y="135dp"
            android:text="运动目标" />

        <TextView
            android:id="@+id/follow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_x="50dp"
            android:layout_y="220dp"
            android:text="关注" />

        <TextView
            android:id="@+id/followed"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_x="150dp"
            android:layout_y="220dp"
            android:text="粉丝" />

        <TextView
            android:id="@+id/post"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_x="250dp"
            android:layout_y="220dp"
            android:text="动态" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/running_data"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_x="30dp"
            android:layout_y="320dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ranking_list"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_x="230dp"
            android:layout_y="320dp" />
    </AbsoluteLayout>
</androidx.constraintlayout.widget.ConstraintLayout>